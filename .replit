modules = ["nodejs-20", "python-3.12", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow]]
name = "dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash dev.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37629
externalPort = 3000

[[ports]]
localPort = 42383
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "production.sh"]
build = ["npm", "run", "build"]
